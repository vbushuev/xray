/* Add Animation */
@-webkit-keyframes animatetop
    from {top: -300px; opacity: 0}
    to {top: 0; opacity: 1}
@keyframes animatetop
    from {top: -300px; opacity: 0}
    to {top: 0; opacity: 1}

@-webkit-keyframes slideLeft {
    100% { left: -1000; }
}
@keyframes slideLeft {
    100% { left: -1000; }
}
