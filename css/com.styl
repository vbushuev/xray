@import url('https://fonts.googleapis.com/css?family=Raleway');
/* The Modal (background) */
.-com-modal
    //display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 999; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    .-com-modal-content /* Modal Content/Box */
        font-family: 'Raleway','Open Sans',sans-serif;
        font-size:16px;
        background-color: #fefefe;
        margin:auto; /* 15% from the top and centered */
        border: 1px solid #888;
        width: 90%; /* Could be more or less, depending on screen size */
        position: relative;
        padding: 0;
        border: 1px solid #888;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
        -webkit-animation-name: animatetop;
        -webkit-animation-duration: 0.4s;
        animation-name: animatetop;
        animation-duration: 0.4s
        //border-radius: 1em;

        .-com-close /* The Close Button */
            color: #aaa;
            position: absolute;
            top:-6px;
            right:8px;
            font-size: 28px;
            font-weight: bold;
        .-com-close:hover,.close:focus
            color: black;
            text-decoration: none;
            cursor: pointer;
        .-com-modal-header /* Modal Header */
            position: relative;
            padding:16px;
            font-family: 'Raleway','Open Sans',sans-serif;
            font-size:16px;
            border-bottom: solid 1px #eaeaea;
            h2
                margin-top: 16px;
            .-com-toper
                position: absolute;
                top:0
                height:32px;
                line-height:32px;
                width:100%;
                margin:0;
                margin-left:-16px;
                padding:0 32px 0 0;
                font-size: 11px;
                background-color: #ffd600;
                color:#011;
                text-align: right;
                ul
                    list-style: none;
                    li
                        display: inline-block;
                        height:14px;
                        line-height:32px;
                        font-size: 14px;
                        padding:0 1em;
                    li:not(:first-child)
                        border-left: solid 1px rgba(0,0,0,.4);
        .-com-modal-body /* Modal Body */
            padding: 1em;
            font-family: 'Raleway','Open Sans',sans-serif;
            font-size:16px;
            border-bottom: solid 1px #eaeaea;
        .-com-modal-footer /* Modal Footer */
            padding: 16px;
            //background-color: #ffd600;color: white;
            font-family: 'Raleway','Open Sans',sans-serif;
            font-size:16px;
            text-align: right;
.-com-form
    position: relative;
    padding:0 4rem;
    .-com-row
        margin:0
    .-com-row-col
        width:50%;
        position: relative;
        margin: 0;
        padding:0 8rem;
        float: left;
    table
        padding: 0;
        td
            width:50%;
            padding: 1em;
        td.-com-offset
            width:25%;
        td.-com-col-4
            width:25%;
        td.-com-col-3
            width:33.33%;
        td.-com-col-2
            width:50%;
        td.-com-col-1
            width:100%;

.-com-form-input
    padding:0;
    margin:0;
    position: relative;
    input
        display: inline-block;
        line-height: 2.4em;
        height:2.4em;
        margin:0
        padding-left: 2.4em
        font-weight: 300;
    textarea
        display: inline-block;
        margin:0
        font-weight: 300;
    label
        line-height: 2.4em;
        height:2.4em;
        margin:0
        padding:0 0 .4em 0;
        font-weight: 400;
        font-size: 1.2em;
.-com-form-input:before
    position: absolute;
    top:3.2em;
    left:.8em;
    content:'>'
    font-size: 1em;
    color:#a0a0a0;
.-com-form-input.-com-input-required
    font-weight: 700
    label
        font-weight: 700
    label:after
        content:'*'
.-com-form-input.-com-input-required-alert
    input
        border: solid .2em red
    label
        color: red

.-com-input-choice
    list-style: none;
    margin:0;
    padding:1em;
    li
        display: inline-block;
        height: 3em;
        line-height: 3em;
        text-align: center;
        padding: 0 1em;
        border:solid 1px rgba(0,0,0,.2)
        margin:2px;
        min-width: 12rem;
        transition: all .4s ease-in;
        a
            text-decoration: none;
    li:hover,li:active
        background-color: #ffd600;
        border:solid 1px #ffd600
        a
            color:#fff;
    li.-com-card
        padding:0;
        height: 8em;
        line-height: 8em;
        text-align: center;
        a
            display: inline-block;
            line-height: 1em;
            text-align: center;
            width:50%;
            padding:0 1em;
            position: relative;

//grid
.-com-row
    display: block;
    padding: 0;
.-com-col
    display: inline-block;
    margin:0;
    padding:1em;
    width:100%;
    position: relative;
.-com-col-1
    width:8.33%;
.-com-col-2
    width:16.66%;
.-com-col-3
    width:25%;
.-com-col-4
    width:33.33%;
.-com-col-5
    width:41.65%;
.-com-col-6
    width:50%;
.-com-col-7
    width:58.31%;
.-com-col-8
    width:66.66%;
.-com-col-9
    width:75%;
.-com-col-10
    width:83.33%;
.-com-col-11
    width:91.63%;
.-com-col-12
    width:100%;
.-com-offset-1
    margin-left: 8.33%;
    margin-right: 8.33%;
.-com-offset-left-1
    margin-left: 8.33%;
.-com-offset-right-1
    margin-right: 8.33%;
// end grid
.-com-btn
    line-height: 3em;
    height:3em;
    text-align: center;
    display: inline-block;
    margin:1em;
    padding:0 1em;
    background-color: #e8e8e8;
    color: white;
    text-transform: uppercase;
.-com-btn-primary
    background-color: #ffd600;
    color:#011;
.-com-right
    float: right;
    display: block;
.-com-message
    padding:1em;
    font-size: 120%;
    background-color: #ededed;
    color:#303030;
.-com-alert-message
    padding:1em;
    font-size: 120%;
    background-color: #c20d0d;
    color:#f0f0f0;
    h4
        color: #fff;
